<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="citasmedicas.ingreso_gmail"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout BackgroundColor="FloralWhite">
            <Label Text="INGRESO CON GMAIL" FontSize="30" TextColor="#633974" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Grid>
                <!--defino las filas-->
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--defino las columnas-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Ingresar GMAIL:" FontSize="20" TextColor="Black" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btnApiGmail" Text="API GMAIL" Grid.Row="0" Grid.Column="1"/>

            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>